extends base.pug

block content 
    h4 Update Video
    form(method="POST") 
        input(name="title", placeholder="Video Title", value=video.title, required)
        input(placeholder="Description", name="description", value=video.description, required, type="text", minlength=20)
        input(placeholder="Hashtags separated by comma.", value=video.hashtags.join(), name="hashtags",required, type="text")
        input(value="Save", type="submit")